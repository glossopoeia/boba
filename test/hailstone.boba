rec func hailstone n =
    switch {
        n 1 eq-i32 => list [];
        n is-even => {
            let rem quot = 2 n divRemE-i32;
            quot hailstone
        }
        else => 3 n mul-i32 1 add-i32 hailstone;
    }
    n cons-list

