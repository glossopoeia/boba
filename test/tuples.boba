func fst =
    match {
        | [| b... a |] => a
    }

func snd =
    match {
        | [| c... b a |] => b
    }

func fstFst =
    match {
        | [| b... [| c... a |] |] => a
    }

func tail =
    match {
        | [| b... a |] => [| b... |]
    }

